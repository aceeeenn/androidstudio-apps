<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    app:orientation="horizontal"
    android:background="@color/graytext">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <EditText
        android:id="@+id/alas"
        android:hint="Alas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/tinggi"
        android:hint="Tinggi"
        android:layout_below="@+id/alas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded"/>

    <TextView
        android:id="@+id/hasil"
        android:layout_below="@+id/tinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil :"/>

    <Button
        android:id="@+id/contact"
        android:layout_below="@+id/button1"
        android:text="GO TO CONTACT"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg" />

    <EditText
        android:id="@+id/panjang"
        android:hint="Panjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/lebar"
        android:hint="Lebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panjang" />

    <TextView
        android:id="@+id/hasilpp"
        android:layout_below="@+id/lebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil :"/>

    <Button
        android:id="@+id/button1"
        android:layout_below="@+id/hasilpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung Persegi"
        android:background="@drawable/rounded"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/logout"
        android:layout_below="@+id/add_contact"
        android:text="LOGOUT"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg" />

    <Button
        android:id="@+id/add_contact"
        android:layout_below="@+id/contact"
        android:text="ADD CONTACT"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad_bg" />

        <Button
            android:id="@+id/booking"
            android:layout_below="@+id/logout"
            android:text="GO TO BOOKING"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad_bg" />

    </RelativeLayout>

</ScrollView>
