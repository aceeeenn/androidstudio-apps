<resources>

    <!-- Base application theme. -->

    <style name="TextLabel" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#282828</item>
        <item name="android:textSize">15dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="borderlessButtonStyle">@style/Base.Widget.AppCompat.Button.Borderless</item>
        <item name="colorAccent">#282828</item>
        <item name="colorControlNormal">#282828</item>
        <item name="colorControlActivated">#282828</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/gradStop</item>
        <item name="colorPrimaryDark">@color/gradStop</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textblue</item>
        <item name="hintTextAppearance">@style/hintTextAppearanceColor</item>
    </style>

    <style name="hintTextAppearanceColor" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/textblue</item>
    </style>

    <style name="textInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/textblue</item>
        <item name="android:paddingLeft">@dimen/edit_text_padding</item>
        <item name="android:paddingRight">@dimen/edit_text_padding</item>
        <item name="android:paddingTop">@dimen/edit_text_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
